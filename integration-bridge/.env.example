# Development environment variables
# Copy this file to .env and modify as needed

# Core Configuration
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=9000
WS_PORT=9001
WORKERS=1

# Database Configuration (SQLite for development)
DB_URL=sqlite:///./dev.db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis Configuration (Optional for development)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Security Configuration
SECURITY_ENABLE_AUTH=false  # Disabled for development
SECURITY_ENABLE_MTLS=false
SECURITY_OAUTH_CLIENT_ID=integration_bridge
SECURITY_OAUTH_CLIENT_SECRET=development_secret
SECURITY_OAUTH_PROVIDER_URL=http://localhost:8080/oauth

# opencode Configuration (Mock for development)
OPENCODE_BASE_URL=http://localhost:8080
OPENCODE_API_KEY=development_api_key
OPENCODE_TIMEOUT=30
OPENCODE_MAX_RETRIES=3

# LRS Configuration (Mock for development)
LRS_BASE_URL=http://localhost:8000
LRS_TUI_BRIDGE_PORT=8000
LRS_REST_PORT=8001
LRS_TIMEOUT=30
LRS_MAX_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_WEBSOCKET_CONNECTIONS=100
RATE_LIMIT_BURST_SIZE=100

# Monitoring
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_PORT=9090
MONITORING_ENABLE_LOGGING=true
MONITORING_LOG_LEVEL=DEBUG
MONITORING_LOG_FORMAT=json